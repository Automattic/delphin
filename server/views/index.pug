doctype html
html(dir=isRtl ? 'rtl' : 'ltr' )
	head
		title=title
		meta(name="description" content=ogDescription)
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		meta(name="twitter:card" content="summary")
		meta(name="twitter:creator" content="@wordpressdotcom")
		meta(property="og:url" content="https://get.blog")
		meta(property="og:type" content="website")
		meta(property="og:title" content=ogTitle)
		meta(property="og:description" content=ogDescription)
		meta(property="og:image" content="https://s0.wp.com/wp-content/themes/a8c/getdotblog/public/images/getdotblog-og.png")
		link(rel="stylesheet", href=resetCss)
		if css
			style(type='text/css').
				#{css}
		if styles
			link(rel="stylesheet", href=styles)
	body(class=bodyClassName)
		#content!= content
		#wpcom-log-in
		if isEnabled( 'sentry' )
			script(src="https://cdn.ravenjs.com/3.9.1/raven.min.js")
		if localeData
			script(type='text/javascript')!='var localeData = ' + localeData + ';'
		script(src=vendor)
		script(src=bundle)
